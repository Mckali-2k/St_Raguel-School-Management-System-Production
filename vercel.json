{
    "version": 2,
    "builds": [
        { "src": "server/src/index.ts", "use": "@vercel/node" },
        { "src": "src/main.tsx", "use": "@vercel/static-build" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "server/$1.ts" },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}